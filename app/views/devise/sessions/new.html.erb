<div class="uk-grid-collapse uk-child-width-1-2@s uk-flex-middle" uk-grid>
  <div class="uk-background-cover uk-background-primary uk-background-blend-hard-light uk-light uk-flex-center uk-flex-middle uk-flex"
       style="background-image: url('/assets/img/bghero2.jpg');" uk-height-viewport>
    <h1>SIM SPP</h1>
  </div>
  <div class="uk-padding-large">
    <h2>Log in</h2>

    <%= alert %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: "off" }) do |f| %>
      <div class="uk-margin">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "uk-input uk-border-rounded", autocomplete: "email" %>
      </div>

      <div class="uk-margin">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "uk-input uk-border-rounded", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="uk-text-right">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="uk-margin uk-text-right">
        <%= f.submit "Sign In", class: "uk-button uk-button-primary uk-border-rounded" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>