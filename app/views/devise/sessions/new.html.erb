<div>
  <div>
    <div class="uk-grid-collapse uk-child-width-1-2@s uk-flex-middle" uk-grid>
      <div class="uk-background-cover" style="background-image: url(/bghero2.jpg);" uk-height-viewport >
        <div class="uk-container uk-light">
          <h1 class="uk-flex uk-flex-center uk-flex-middle" uk-height-viewport>SIM SPP</h1>
        </div>
      </div>
      <div class="uk-padding-large">
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="uk-margin">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email@example.com', class: 'uk-input uk-border-rounded' %>
          </div>

          <div class="uk-margin uk-margin-remove-bottom">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder: '••••••', class: 'uk-input uk-border-rounded' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="uk-margin uk-margin-remove-top uk-text-right@m">
              <%= f.check_box :remember_me, class: 'uk-checkbox uk-border-rounded' %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="uk-margin">
            <%= f.submit "Log in", class: 'uk-button uk-button-primary uk-border-rounded' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
