<div class="uk-container uk-padding">
  <div uk-grid>
    <div class="uk-width-expand@m">
      <div class="uk-card uk-card-default uk-card-body uk-border-rounded uk-box-shadow-large">
        <h3>List Akun</h3>

        <div class="uk-overflow-auto">
          <div class="uk-margin uk-text-right@m">
            <a href="#modal-add-siswa" uk-toggle class="uk-button uk-button-default uk-border-rounded uk-box-shadow-medium">
              <%= fa_icon 'plus', text: 'Tambah Akun' %>
            </a>
          </div>

          <table class="uk-table uk-table-striped uk-table-hover">
            <caption>Total Akun : <%= @totalakun %> Akun.</caption>
            <thead>
            <tr>
              <th class="uk-table-shrink">#</th>
              <th>name</th>
              <th>email</th>
              <th>role</th>
              <th>rayon</th>
              <th class="uk-table-shrink">Action</th>
            </tr>
            </thead>
            <tbody>
              <% @akun.each do |akun| %>
                <tr>
                  <td>â€¢</td>
                  <td class="uk-text-capitalize"><%= akun.name %></td>
                  <td><%= akun.email %></td>
                  <td class="uk-text-capitalize"><%= akun.role %></td>
                  <td><%= akun.id_rayon %></td>
                  <td>
                    <a type="button"><%= fa_icon 'angle-down' %></a>
                    <div uk-dropdown="mode: click">
                      <ul class="uk-nav uk-dropdown-nav">
                        <li><a href="#"><%= fa_icon 'edit' %> Edit</a></li>
                        <li><a href="#"><%= fa_icon 'trash' %> Hapus</a></li>

                      </ul>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <ul class="uk-pagination uk-flex-right@m">
          <li></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- modal add siswa -->
